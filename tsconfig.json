{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        // "inlineSources": true,    // use inlineSources instead of sourceMap
        "noEmitHelpers": false,
        "strictNullChecks": false,
        "noImplicitAny": false,
        "allowJs": true,
        "baseUrl": "./src",
        "paths": {},
        "lib": [
            "es2015",
            "es2017",
            "dom"
        ],
        "typeRoots": [ "./node_modules/@types" ],
        "types": [
            "node"
        ]
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "src/**/*.ts"
    ],
    "awesomeTypescriptLoaderOptions": {
      "forkChecker": true,
      "useWebpackText": true,
      "useBabel": true,
      "useCache": true
    },
    "compileOnSave": false,
    "buildOnSave": false
}
